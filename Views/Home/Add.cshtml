@model ToDo

<h2 class="mb-4 text-center">New Task</h2>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Task Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter a brief description of the task" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))">
            <option value="">Select a category</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="StatusId" class="form-label">Status</label>
        <select asp-for="StatusId" class="form-select" asp-items="@(new SelectList(ViewBag.Statuses, "StatusId", "Name"))">
            <option value="">Select a status</option>
        </select>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">Add Task</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
